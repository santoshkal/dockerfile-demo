{
  "dockerfile": [
    {
      "stage": 0,
      "instructions": [
        {
          "//": [
            "Dockerfile generated by Genval"
          ]
        },
        {
          "//": [
            "Uses Chainguard's distroless wolfi as base image"
          ]
        },
        {
          "from": [
            "cgr.dev/chainguard/wolfi-base AS build"
          ]
        },
        {
          "env": [
            "APP_HOME=/app"
          ]
        },
        {
          "workdir": [
            "$APP_HOME"
          ]
        },
        {
          "run": [
            "--no-cache apk update && apk add dotnet-7-sdk"
          ]
        },
        {
          "copy": [
            ". ."
          ]
        },
        {
          "run": [
            "dotnet restore --no-cache ./Application/Application.csproj",
            "dotnet build --configuration Release -o out",
            "dotnet publish -c Release --use-current-runtime --self-contained false -o out"
          ]
        }
      ]
    },
    {
      "stage": 1,
      "instructions": [
        {
          "from": [
            "cgr.dev/chainguard/wolfi-base As Final"
          ]
        },
        {
          "run": [
            "--no-cache apk update && apk add dotnet-7-sdk",
            "apk add dotnet-7-runtime"
          ]
        },
        {
          "env": [
            "APP_HOME=/app"
          ]
        },
        {
          "workdir": [
            "$APP_HOME"
          ]
        },
        {
          "copy": [
            "--from=build /app/out/ ."
          ]
        },
        {
          "user":
          ["nonroot"]
        },
        {
          "expose": [
            "80"
          ]
        },
        {
          "entrypoint": [
            "dotnet",
            "./AuthorService.dll"
          ]
        }
      ]
    }
  ]
}